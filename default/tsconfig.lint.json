{
  "extends": "@flareforge/dev/tsconfigs/lint",
  "compilerOptions": {
    "paths": {
      "@locales/*": ["./locales/*"],
      "@/workers": ["./workers/index"],
      "@/*": ["./app/*"],
      "+flareforge/*": ["./.flareforge/*"]
    },
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": [
    ".flareforge/i18next.d.ts",
    "app/**/*",
    "workers/**/*",
    "worker-configuration.d.ts"
  ]
}
